            <!--</manifest>-->
            <!--</archive>-->
            <!--<outputDirectory>${project.parent.build.directory}/lib</outputDirectory>-->
            <!--</configuration>-->
            <!--</plugin>-->

            <!--<plugin>-->
            <!--<groupId>org.apache.maven.plugins</groupId>-->
            <!--<artifactId>maven-dependency-plugin</artifactId>-->
            <!--<version>2.8</version>-->
            <!--<executions>-->
            <!--<execution>-->
            <!--<id>copy</id>-->
